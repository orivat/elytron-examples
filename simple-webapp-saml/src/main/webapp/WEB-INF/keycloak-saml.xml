<keycloak-saml-adapter>
    <SP entityID="simple-webapp-saml"
        sslPolicy="EXTERNAL"
        logoutPage="/simple-webapp-saml">
	<Keys>
          <Key signing="true">
        <KeyStore password="password" file="/etc/keycloak-saml-secret-volume/keystore.jks">
            <PrivateKey alias="simple-webapp-saml" password="password"/>
            <Certificate alias="myrealm"/>
        </KeyStore>
    </Key>
        </Keys>
        <IDP entityID="idp"
             signatureAlgorithm="RSA_SHA256"
             signatureCanonicalizationMethod="http://www.w3.org/2001/10/xml-exc-c14n#">
            <SingleSignOnService signRequest="true"
                                 validateResponseSignature="true"
                                 validateAssertionSignature="false"
                                 requestBinding="POST"
                                 bindingUrl="https://keycloak-saml-elytron-1311.apps-crc.testing/realms/myrealm/protocol/saml"/>
            <SingleLogoutService signRequest="true"
                                 signResponse="true"
                                 validateRequestSignature="true"
                                 validateResponseSignature="true"
                                 requestBinding="POST"
                                 responseBinding="POST"
                                 postBindingUrl="https://keycloak-saml-elytron-1311.apps-crc.testing/realms/myrealm/protocol/saml"
                                 redirectBindingUrl="https://keycloak-saml-elytron-1311.apps-crc.testing/realms/myrealm/protocol/saml"/>
        </IDP>
    </SP>
</keycloak-saml-adapter>
